# Application
APP_NAME=EcoPredict
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database
DATABASE_URL=postgresql://ecopredict_user:password@localhost:5432/ecopredict
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Security
SECRET_KEY=change-this-to-a-random-secret-key
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:8501,https://ecopredict.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Passwords
DB_PASSWORD=ecopredict_password
GRAFANA_PASSWORD=admin
